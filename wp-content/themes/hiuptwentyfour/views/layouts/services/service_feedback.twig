        </svg>
    </figure>

    <!-- Content START -->
    <div class="container">
        <div class="row align-items-center justify-content-between">
            {% if left_block %}
                {% for item in left_block %}
                    <div class="col-lg-6 position-relative z-index-9">
                        <h6 class="mb-3 font-base">
                            {{ item.tagline }}
                        </h6>
                        <h1 class="display-4">
                            {{ item.headline }}
                        </h1>

                        {% set feedbacks = item.feedbacks_repeater %}

                        {% if feedbacks is not empty %}
                            <div class="row my-3">
                                <!-- Slider START -->
                                <div class="tiny-slider arrow-round arrow-dark arrow-hover arrow-xs">
                                    <div class="tiny-slider-inner" data-autoplay="true" data-arrow="true" data-edge="2" data-dots="false" data-items="1">
                                        {% for feedback in feedbacks %}
                                            <div>
                                                <div class="d-md-flex my-2">
                                                    {% set thumbnail = get_image(feedback.image) %}

                                                    {% if thumbnail %}
                                                        <div class="avatar avatar-lg me-3 flex-shrink-0">
                                                            <img class="avatar-img rounded-circle" src="{{ thumbnail.src | resize(64,64) }}" alt="{{ feedback.feedbacker_name }}" />
                                                        </div>
                                                    {% endif %}
                                                    <div class="flex-grow-1 mt-2 mt-md-0">
                                                        <p class="mb-2">
                                                            {{ feedback.feedback | raw }}
                                                        </p>
                                                        <h6 class="me-3 mb-0">
                                                            {{ feedback.feedbacker_name }}
                                                            <span class="small mb-0 text-body">
                                                                {% if feedback.feedbacker_designation %}
                                                                    (
                                                                    {{ feedback.feedbacker_designation }}
                                                                    )
                                                                {% endif %}
                                                            </span>
                                                        </h6>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>

                            </div>
                        {% endif %}

                    </div>
                {% endfor %}
            {% endif %}
            {% for item in right_block %}
                <div class="col-lg-6 position-relative mt-5 mt-lg-0">
                    <h2 class="mt-4 mt-md-0 mt-lg-5">
                        {{ item.headline }}
                    </h2>
                    {{ item.sub_headline | wpautop }}

                    <div class="card card-body shadow p-4 p-sm-5 position-relative">
                        <figure class="position-absolute top-0 start-100 mt-n5 ms-n7">
